extends ../layouts/layout

block content 
    h1.head_title 회원가입하기
    .form_container 
        form(action=routes.join, method="post")
            input(type="email", name="email", required, placeholder="이메일을 입력해주세요")
            input(type="text", name="userName", required, placeholder="닉네임을 입력해주세요",  maxlength=10)
            input(type="text", name="name", required, placeholder="실명을 입력해주세요", maxlength=5)
            input(type="password", name="password", required, placeholder="비밀번호를 입력해주세요")
            input(type="password", name="password2", required, placeholder="비밀번호를 한번 더 입력해주세요")
            button(type="submit", class="submit_btn") 회원가입
        include ../partials/socialLogin
    script(src="/static/js/validation.js")