extends ../layouts/layout

block content 
    h1.head_title 회원가입하기
    div.form_container 
        if errorMessage
            span=errorMessage
        form(action=routes.join, method="post")
            input(type="text", name="name", required=true, placeholder="이름을 입력해주세요")
            input(type="email", name="email", required=true, placeholder="이메일을 입력해주세요")
            input(type="text", name="userName", required=true, placeholder="닉네임을 입력해주세요")
            input(type="password", name="password", required=true, placeholder="비밀번호를 입력해주세요")
            input(type="password", name="password2", required=true, placeholder="비밀번호를 한번 더 입력해주세요")
            input(type="submit", value="가입하기", class="submit_btn")
        include partials/socialLogin