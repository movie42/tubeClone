extends ../layouts/layout

block content 
    h1.head_title 로그인
    if errorMessage
        h4=errorMessage
    div.form_container
        form(action=routes.login, method="post")
            input(type="email", name="email", required=true, placeholder="아이디를 입력해주세요")
            input(type="password", name="password", required=true, placeholder="비밀번호를 입력해주세요")
            input(type="submit", value="로그인", class="submit_btn")
        include ../partials/socialLogin