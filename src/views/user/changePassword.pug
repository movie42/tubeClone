extends ../layouts/layout

block content
    h2 비밀번호 변경
    if errorMessage 
        span=errorMessage
    form(method="post")
        input(type="password", name="oldPassword", required=true, placeholder="이전 비밀번호")
        input(type="password", name="newPassword", required=true, placeholder="새로운 비밀번호")
        input(type="password", name="newPassword2", required=true, placeholder="새로운 비밀번호 확인")
        input(type="submit", value="비밀번호 변경")
