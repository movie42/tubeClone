extends layouts/layout

block content 
    form(action=`/user${routes.changePassword}`, method="post")
        input(type="text", name="password", required=true, placeholder="이전 비밀번호")
        input(type="text", name="newPassword", required=true, placeholder="새로운 비밀번호")
        input(type="text", name="newPassword2", required=true, placeholder="새로운 비밀번호 확인")
        input(type="submit", value="비밀번호 변경")
